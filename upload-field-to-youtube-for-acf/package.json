{
  "name": "upload-field-to-youtube-for-acf",
  "version": "1.0.0",
  "description": "Upload Field to YouTube for ACF assets build system with Vite.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:polling": "VITE_USE_POLLING=true vite",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "build:watch": "vite build --watch",
    "build:watch:prod": "NODE_ENV=production vite build --watch",
    "preview": "vite preview",
    "clean": "rm -rf assets/",
    "clean:cache": "rm -rf node_modules/.vite/",
    "clean:all": "npm run clean && npm run clean:cache",
    "clean:sourcemaps": "find assets -name '*.map' -delete",
    "analyze": "npx vite-bundle-analyzer assets/.vite/manifest.json -m static -o false",
    "analyze:legacy": "npx vite-bundle-analyzer assets/manifest.json -m static -o false",
    "prebuild": "npm run clean",
    "preobfuscate": "npm run build",
    "postbuild:prod": "npm run clean:sourcemaps",
    "debug": "DEBUG=vite:* npm run dev",
    "debug:config": "vite --debug config",
    "debug:info": "node -e \"console.log(JSON.stringify(process.env, null, 2))\" | grep VITE",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "crowdin:upload": "crowdin upload sources",
    "crowdin:download": "crowdin download --all"
  },
  "devDependencies": {
    "@crowdin/cli": "^4.11.0",
    "@types/jquery": "^3.5.33",
    "glob": "^11.0.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "sass": "^1.69.0",
    "vite": "^7.0.6",
    "vite-bundle-analyzer": "^1.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.js",
      "<rootDir>/__tests__/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "resources/js/**/*.js",
      "!resources/js/**/*.test.js",
      "!resources/js/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ],
    "clearMocks": true,
    "restoreMocks": true
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "author": "Frugan <dev@frugan.it>",
  "license": "GPL-3.0-or-later"
}
